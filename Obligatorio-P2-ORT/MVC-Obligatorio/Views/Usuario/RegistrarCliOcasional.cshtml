
@{
    ViewData["Title"] = "RegistrarCliOcasional";
}

<h1>Registrar Cliente</h1>
<form asp-action="RegistrarCliOcasional" asp-controller="Usuario" method="post">
    <label>
        Correo Electrónico:
        <input type="text" name="correoElectronico" /> 
    </label> <br />
    <label>
        Contraseña:
        <input type="password" name="contrasenia" />
    </label> <br />
    <label>
        Nombre:
        <input type="text" name="nombre" />
    </label> <br />
    <label>
        Documento:
        <input type="text" name="documento" />
    </label> <br />
    <label>
        Nacionalidad:
        <input type="text" name="nacionalidad" />
    </label> <br />
    <button type="submit">Registrarse</button>
</form>
@ViewBag.Mensaje

